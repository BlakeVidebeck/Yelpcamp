<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center col-sm-12 m-0 p-0">
		<!-- logic if no search results -->
		<% if(noMatch !== undefined){ %>
		<h3><%= noMatch %></h3>
		<% } %>
		<!-- ignore -->
		<% campgrounds.forEach(campground => { %>
		<div class="col-md-6 col-lg-3">
			<div class="card">
				<img class="card-img-top" src="<%= campground.image %>" />
				<div class="card-body">
					<h4 class="card-title"><%= campground.name %></h4>
					<p class="card-text text-truncate"><%= campground.description %></p>
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<%- include("../partials/footer") %>

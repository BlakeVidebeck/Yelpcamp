<%- include("../partials/header") %>

<div class="row">
	<div class="col-md-5 col-lg-3" style="width: 30%; margin: 25px auto;">
		<h1 class="text-center"><%= method %></h1>
		<form action="<%= action %>" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="name">Campground name</label>
				<input
					class="form-control"
					id="name"
					type="text"
					name="campground[name]"
					value="<%= campground.name %>"
					placeholder="falls peak"
					required
				/>
			</div>
			<div class="form-group">
				<label for="price">Campground price</label>
				<input
					class="form-control"
					id="price"
					type="Number"
					name="campground[price]"
					value="<%= campground.price  %>"
					placeholder="9.50"
					min="0.01"
					step="0.01"
					required
				/>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" class="form-control p-1" id="image" name="campground[image]" accept="image/*" />
			</div>
			<div class="form-group">
				<label for="description">Campground description</label>
				<textarea class="form-control" id="description" type="text" name="campground[description]" required>
<%= campground.description %></textarea
				>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Update</button>
			</div>
		</form>

		<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
</div>
<%- include("../partials/footer") %>

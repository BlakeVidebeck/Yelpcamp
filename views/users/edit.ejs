<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-lg-4" style="width: 30%; margin: 25px auto;">
			<h1 class="text-center">Edit <%= user.username %></h1>
			<form action="/users/<%= user._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="firstName">First name: </label>
					<input
						class="form-control form-control-sm"
						id="firstName"
						type="text"
						name="user[firstName]"
						value="<%= user.firstName %>"
					/>
				</div>
				<div class="form-group">
					<label for="lastName">Last name: </label>
					<input
						class="form-control form-control-sm"
						id="lastName"
						type="text"
						name="user[lastName]"
						value="<%=user.lastName%>"
					/>
				</div>
				<div class="form-group">
					<label for="email">Email: </label>
					<input
						class="form-control form-control-sm"
						id="email"
						type="email"
						name="user[email]"
						value="<%=user.email%>"
					/>
				</div>
				<div class="form-group">
					<label for="avatar">Avatar picture: </label>
					<input
						class="form-control form-control-sm"
						id="avatar"
						type="text"
						name="user[avatar]"
						value="<%=user.avatar%> "
					/>
				</div>
				<div class="form-group">
					<label for="description"> Tell us about yourself!</label>
					<textarea class="form-control form-control-sm" id="description" name="user[description]" cols="5" rows="5">
<%= user.description %></textarea
					>
				</div>

				<div class="form-group">
					<button class="btn btn-primary btn-block">Update profile!</button>
				</div>
			</form>

			<a href="/users/<%= user._id %>">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
